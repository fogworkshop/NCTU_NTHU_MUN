CREATE OR REPLACE FUNCTION update_modified_column()	
RETURNS TRIGGER AS $$
BEGIN
	NEW.modified = now();
	RETURN NEW;	
END;
$$ language 'plpgsql';

CREATE TABLE account(
    uid SERIAL,
	email varchar(256),
	pwd varchar(256),
	"type" integer DEFAULT 0,
    info_confirm bool DEFAULT FALSE,
	created timestamp DEFAULT now(),
	modified timestamp DEFAULT now()
);

CREATE TRIGGER account_modified BEFORE UPDATE ON account FOR EACH ROW EXECUTE PROCEDURE  update_modified_column();

CREATE TABLE account_info(
    uid integer,
    chinesename varchar(256),
    englishname varchar(256),
    gender varchar(256),
    birth date,
    nationality varchar(256),
    vegetarian bool,

    university varchar(256),
    department varchar(256),
    grade integer,
    delegation_englishname varchar(256),
    delegation_email varchar(256),

    residence varchar(256),
    city varchar(256),
    address varchar(256),
    cellphone varchar(256),

    require_accommodation bool,

    committee_preference varchar(256),
    pc varchar(256),
    iachr varchar(256),
    experience varchar(256),
    hearabout varchar(256),

	created timestamp DEFAULT now(),
	modified timestamp DEFAULT now()
);

CREATE TRIGGER account_info_modified BEFORE UPDATE ON account_info FOR EACH ROW EXECUTE PROCEDURE  update_modified_column();

